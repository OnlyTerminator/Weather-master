<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginBottom="1dp"
    android:id="@+id/ll_ba"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/iv_city_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/cloud_hail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:id="@+id/tv_city_name"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/iv_city_icon"
            android:layout_marginLeft="5dp"
            android:textColor="#cf000000"
            android:layout_marginTop="2dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晴转多云"
            android:id="@+id/tv_city_des"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/iv_city_icon"
            android:layout_marginLeft="5dp"
            android:textColor="#65000000"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/tv_city_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#cf000000"
            android:textSize="22dp"
            android:text="4°"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>
</LinearLayout>